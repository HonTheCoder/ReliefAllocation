{
  "name": "reliefallocation",
  "version": "1.0.0",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint js/ *.js *.ts --fix",
    "format": "prettier --write js/ *.js *.ts *.html *.css",
    "dev": "live-server --port=8080",
    "build": "npm run lint && npm run test && npm run tsc",
    "start": "firebase serve --only hosting",
    "tsc": "tsc --noEmit",
    "tsc:build": "tsc",
    "type-check": "tsc --noEmit --watch"
  },
  "keywords": ["relief", "allocation", "management", "firebase", "web-app"],
  "author": "Relief Allocation Team",
  "license": "ISC",
  "description": "A comprehensive relief goods allocation and management system",
  "dependencies": {
    "firebase": "^11.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
    "transform": {
      "^.+\\.(ts|tsx)$": ["ts-jest", {
        "useESM": true
      }],
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.(test|spec).(ts|tsx|js|jsx)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "js/**/*.{js,ts,tsx}",
      "*.{js,ts}",
      "!node_modules/**",
      "!tests/**",
      "!**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["html", "text", "lcov"]
  }
}
